@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reestablecer contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center min-vh-100 bg-light">
    <div class="container d-flex justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow p-4 p-lg-5">
                <h1 class="text-center fw-bold mb-4">Reestablecer contraseña</h1>
                <form action="@Url.Action("Reestablecer", "Acceso")" method="post" novalidate>

                    <!-- Correo -->
                    <div class="mb-4">
                        <label for="email" class="form-label fw-bold">Correo electrónico</label>
                        <div class="input-group input-group-lg">
                            <input id="email" name="email"
                                   type="email"
                                   class="form-control"
                                   placeholder="ejemplo@correo.com"
                                   required />
                            <span class="input-group-text">
                                <i class="fa-solid fa-envelope"></i>
                            </span>
                        </div>
                    </div>

                    <button class="btn btn-brand btn-lg w-100 mb-3" type="submit">
                        <i class="fa-solid fa-paper-plane me-2"></i> Enviar enlace de reestablecimiento
                    </button>

                    <a href="@Url.Action("Index","Acceso")" class="btn btn-outline-secondary w-100">
                        <i class="fa-solid fa-arrow-left me-2"></i> Volver al inicio de sesión
                    </a>

                    <!-- Mensajes -->
                    @{
                        if (ViewBag.Error != null)
                        {
                            <div class="form-floating  mt-3 mb-3">
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.Error
                                </div>
                            </div>
                        }
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="form-floating mt-3 mb-3">
                            <div class="alert alert-success" role="alert">
                                @TempData["Success"]
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
