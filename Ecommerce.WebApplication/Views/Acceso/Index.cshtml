
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio de Sesion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container py-5">
        <div class="row align-items-center">
            <!-- Imagen a la IZQUIERDA en md+; en móvil aparece arriba -->
            <div class="col-md-6 contenedor order-md-1">
                <div class="illustration-wrap">
                    <img src="~/Content/themes/img/development.png"
                         class="illustration img-fluid mt-2"
                         alt="Ilustración login" />
                </div>
            </div>

            <!-- Card/form a la DERECHA -->
            <div class="col-md-5 offset-md-1 order-md-2">
                <div class="card p-4 p-lg-5">
                    <h1 class="text-center fw-bold mb-4">Iniciar sesión</h1>

                    <form class="login-form" id="loginForm" autocomplete="off" action="@Url.Action("Index", "Acceso")" method="post" novalidate>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Correo electrónico</label>
                            <input id="email"
                                   name="email"
                                   type="email"
                                   class="form-control form-control-lg"
                                   required
                                   autocomplete="username" />
                            <div class="invalid-feedback">Escribe un correo válido.</div>
                        </div>

                        <div class="mb-2">
                            <label for="password" class="form-label fw-bold mb-0">Contraseña</label>
                            <div class="input-group input-group-lg">
                                <input id="password"
                                       name="password"
                                       type="password"
                                       class="form-control"
                                       required
                                       minlength="8"
                                       autocomplete="current-password" />
                                <span class="input-group-text"
                                      id="togglePassword"
                                      style="cursor: pointer">
                                    <i class="fa-solid fa-eye"></i>
                                </span>
                            </div>
                            <div class="invalid-feedback">
                                La contraseña debe tener 8 o más caracteres.
                            </div>
                        </div>

                        <div class="mb-4 d-flex justify-content-between align-items-center">
                            <div class="form-check mb-0">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="remember"
                                       name="remember" />
                                <label class="form-check-label" for="remember">
                                    Recordarme
                                </label>
                            </div>

                            <a href="@Url.Action("ReestablecerContra", "Acceso")" class="small">¿Olvidaste tu contraseña?</a>
                        </div>

                        <button class="btn btn-brand btn-lg w-100 mb-3" type="submit">
                            <i class="fa-solid fa-right-to-bracket me-2"></i> Entrar
                        </button>

                        <div class="divider mb-3">o iniciar con</div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-outline-danger w-50">
                                <i class="fa-brands fa-google me-2"></i> Google
                            </button>

                            <button type="button" class="btn btn-outline-primary w-50">
                                <i class="fa-brands fa-facebook-f me-2"></i> Facebook
                            </button>
                        </div>

                        <div class="mb-4 text-center">
                            <p class="text-secondary mt-3 mb-0">
                                <i class="fa-regular fa-user me-1"></i>
                                ¿No tienes cuenta? <a href="@Url.Action("Registrar", "Acceso")">Regístrate</a>
                            </p>
                        </div>

                        @{
                            if (ViewBag.Error != null)
                            {
                                <div class="form-floating mt-3 mb-3">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.Error
                                    </div>
                                </div>
                            }
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/form-utils.js"></script>
</body>
</html>